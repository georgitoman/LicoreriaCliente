@model Producto

@{
    List<Categoria> categorias = ViewData["CATEGORIAS"] as List<Categoria>;
}

<form asp-action="EditarProducto" asp-controller="Productos" enctype="multipart/form-data">
    <div class="form-group">
        <label class="control-label">IdProducto</label>
        <input name="idproducto" value="@Model.IdProducto" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label class="control-label">Nombre</label>
        <input name="nombre" value="@Model.Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label class="control-label">Precio</label>
        <input name="precio" value="@Model.Precio" class="form-control" />
    </div>
    <div class="form-group">
        <label class="control-label">Stock</label>
        <input name="stock" value="@Model.Stock" class="form-control" />
    </div>
    <div class="form-group">
        <label class="control-label">Imagen</label>
        <input name="imagen" type="file" class="form-control" />
    </div>
    <div class="form-group">
        <label class="control-label">Litros</label>
        <input name="litros" value="@Model.Litros" class="form-control" />
    </div>
    <div class="form-group">
        <label class="control-label">Categoria</label>
        <select name="idcategoria" class="form-control">
            @foreach (Categoria cat in categorias)
            {
                if (cat.IdCategoria == Model.Categoria)
                {
                    <option value="@cat.IdCategoria" class="form-control" selected>
                        @cat.Nombre
                    </option>
                }
                else
                {
                    <option value="@cat.IdCategoria" class="form-control">
                        @cat.Nombre
                    </option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary" >Modificar</button>
    </div>
</form>

