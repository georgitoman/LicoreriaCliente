<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="icon" href="http://127.0.0.1:10000/devstoreaccount1/imageneslicoreria/Logo.png">

    <title>Licorería</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/starter-template/">

    <!-- Bootstrap core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/css/starter-template.css" rel="stylesheet" />
    @RenderSection("styles", false)

</head>

<body class="bg-light">
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" asp-action="TodosProductos" asp-controller="Productos">LicoreriaCliente</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                @await Component.InvokeAsync("MenuCategorias")
            </ul>
            <partial name="_PartialMenu" />
            <ul class="navbar-nav my-2 my-lg-0">
                <li class="nav-item">
                    <a asp-controller="Productos" asp-action="Carrito">
                        <img src="http://127.0.0.1:10000/devstoreaccount1/imageneslicoreria/Carrito.png" style="width:50px; height:45px" />
                    </a>
                </li>
                <li class="nav-item">
                    <form class="form-inline" method="post" asp-action="TodosProductos" asp-controller="Productos" asp-route-idcategoria="@ViewData["IDCATEGORIA"]">
                        <input name="nombre" class="form-control mr-sm-2" type="text" placeholder="Buscar" aria-label="Buscador">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
                    </form>
                </li>
            </ul>

        </div>
    </nav>

    <main role="main" class="container">
        <div class="starter-template">
            @RenderBody()
        </div>

    </main>

    <!-- Placed at the end of the document so the pages load faster -->
    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery-slim.min.js"><\/script>')</script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

    @RenderSection("scripts", false)
</body>
</html>
