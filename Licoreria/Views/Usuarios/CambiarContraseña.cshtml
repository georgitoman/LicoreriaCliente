@{
    ViewData["Title"] = "CambiarContraseña";
}

<div class="d-flex justify-content-center align-items-center">
    <h1 class="toast-header bg-light">Cambiar contraseña</h1>
</div>

<form asp-action="CambiarContraseña" asp-controller="Usuarios">
    <div class="form-group">
        <label class="control-label">Contraseña actual</label>
        <input name="cont" type="password" class="form-control" />
        <span class="text-danger">@ViewData["CONT"]</span>
    </div>
    <div class="form-group">
        <label class="control-label">Nueva contraseña</label>
        <input name="newcont" type="password" class="form-control" />
        <span class="text-danger">@ViewData["NEWCONT"]</span>
    </div>
    <div class="form-group">
        <label class="control-label">Repetir nueva contraseña</label>
        <input name="repnewcont" type="password" class="form-control" />
        <span class="text-danger">@ViewData["REPNEWCONT"]</span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="EditarUsuario" asp-controller="Usuarios">Volver</a>
</div>

