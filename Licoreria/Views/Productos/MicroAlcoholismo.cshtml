@model IEnumerable<Licoreria.Models.Producto>

@{
    ViewData["Title"] = "MicroAlcoholismo";
}
<head>
    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/album/">

    <!-- Bootstrap core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/css/album.css" rel="stylesheet" />
</head>
<body>
    <h1>MicroAlcoholismo</h1>
    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top " src="~/images/@item.Imagen" alt="Imagen no disponible" style="height: auto; width: 100%" />
                            <div class="card-body">
                                <p class="card-text">@item.Nombre @item.Litros L</p>

                                <div class="d-flex justify-content-between align-items-center">
                                    <form method="post">
                                        <input type="hidden" name="idproducto" value="@item.IdProducto" />
                                        <input type="number" name="cantidad" style="width:45px" value="1" min="1" max="100" />
                                        <button type="submit" class="btn btn-info">Añadir a carrito</button>
                                    </form>
                                    <p class="card-text">@item.Precio €</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="~/js/jquery-3.5.1.min.js"></script>
    <script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery-slim.min.js"><\/script>')</script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/holder.min.js"></script>
</body>